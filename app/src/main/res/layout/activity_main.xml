<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pikaso_texttoimage_animated_tree_house"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Space
        android:layout_width="match_parent"
        android:layout_height="36dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="51dp"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/alfa_slab_one"
        android:inputType="text|textImeMultiLine"
        android:text="Welcome, meet Rocky"
        android:textAlignment="gravity"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#FFFFFF"
        android:textSize="24sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/alfa_slab_one"
        android:gravity="center_horizontal"
        android:text="Your Tamagotchi App"
        android:textColor="#FFFFFF"
        android:textSize="24sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="163dp" />

    <ImageView
        android:id="@+id/imageViewMainStartup"
        android:layout_width="match_parent"
        android:layout_height="253dp"
        android:background="#00000000"
        android:contentDescription=" tamagotchi avatar"
        android:visibility="visible"
        app:srcCompat="@drawable/main" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="62dp" />

    <Button
        android:id="@+id/getStartedBtn"
        android:layout_width="242dp"
        android:layout_height="77dp"
        android:layout_gravity="center_horizontal|center_vertical"
        android:backgroundTint="#474646"
        android:fontFamily="@font/alfa_slab_one"
        android:gravity="center_horizontal|center_vertical"
        android:text="Get Started!"
        android:textColor="#FFFFFF" />

</LinearLayout>